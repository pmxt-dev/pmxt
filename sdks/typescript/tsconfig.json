{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "rootDir": "."
  },
  "include": [
    "index.ts",
    "pmxt/**/*",
    "generated/src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "tests"
  ]
}